<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task Manager</title>
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/fontawesome.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-tasks me-2"></i>Task Manager
            </a>
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/tasks/new">
                    <i class="fas fa-plus me-1"></i>Nuova Task
                </a>
                <a class="nav-link" href="/tasks/search">
                    <i class="fas fa-search me-1"></i>Cerca
                </a>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        {{#success}}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{success}}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
        {{/success}}
        
        {{#error}}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            {{error}}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
        {{/error}}

        <!-- Statistiche -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card stats-card">
                    <div class="card-body text-center">
                        <i class="fas fa-list fa-2x mb-2"></i>
                        <h4>{{stats.totalTasks}}</h4>
                        <p class="mb-0">Totale Tgagsask</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card stats-card">
                    <div class="card-body text-center">
                        <i class="fas fa-clock fa-2x mb-2"></i>
                        <h4>{{stats.pendingTasks}}</h4>
                        <p class="mb-0">In Attesa</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card stats-card">
                    <div class="card-body text-center">
                        <i class="fas fa-play fa-2x mb-2"></i>
                        <h4>{{stats.inProgressTasks}}</h4>
                        <p class="mb-0">In Corso</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card stats-card">
                    <div class="card-body text-center">
                        <i class="fas fa-check fa-2x mb-2"></i>
                        <h4>{{stats.completedTasks}}</h4>
                        <p class="mb-0">Completate</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Lista Task -->
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="fas fa-tasks me-2"></i>Le tue Task
                </h5>
                <div class="btn-group" role="group">
                    <a href="/?sortBy=createdAt&sortDir=desc" class="btn btn-outline-secondary btn-sm">
                        <i class="fas fa-sort-amount-down me-1"></i>Pi√π Recenti
                    </a>
                    <a href="/?sortBy=dueDate&sortDir=asc" class="btn btn-outline-secondary btn-sm">
                        <i class="fas fa-calendar me-1"></i>Per Scadenza
                    </a>
                </div>
            </div>
            <div class="card-body">
                {{#tasks}}
                <div class="card task-card mb-3 priority-{{priority.name}} status-{{status.name}}">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-8">
                                <h6 class="card-title mb-1">
                                    <a href="/tasks/{{id}}" class="text-decoration-none">{{title}}</a>
                                </h6>
                                <p class="card-text text-muted small mb-2">{{description}}</p>
                                <div class="d-flex gap-3 small text-muted">
                                    <span><i class="fas fa-tag me-1"></i>{{priority.displayName}}</span>
                                    <span><i class="fas fa-info-circle me-1"></i>{{status.displayName}}</span>
                                    {{#dueDate}}
                                    <span><i class="fas fa-calendar me-1"></i>{{dueDate}}</span>
                                    {{/dueDate}}
                                </div>
                            </div>
                            <div class="col-md-4 text-end">
                                <div class="btn-group-vertical btn-group-sm">
                                    <a href="/tasks/{{id}}" class="btn btn-outline-primary">
                                        <i class="fas fa-eye me-1"></i>Visualizza
                                    </a>
                                    <a href="/tasks/{{id}}/edit" class="btn btn-outline-secondary">
                                        <i class="fas fa-edit me-1"></i>Modifica
                                    </a>
                                    <form method="post" action="/tasks/{{id}}/delete" class="d-inline">
                                        <button type="submit" class="btn btn-outline-danger" 
                                                onclick="return confirm('Sei sicuro di voler eliminare questa task?')">
                                            <i class="fas fa-trash me-1"></i>Elimina
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {{/tasks}}
                
                {{^tasks}}
                <div class="text-center py-5">
                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">Nessuna task trovata</h5>
                    <p class="text-muted">Inizia creando la tua prima task!</p>
                    <a href="/tasks/new" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i>Crea Prima Task
                    </a>
                </div>
                {{/tasks}}
            </div>
        </div>

        <!-- Paginazione -->
        {{#tasks}}
        {{#totalPages}}
        <nav aria-label="Paginazione" class="mt-4">
            <ul class="pagination justify-content-center">
                {{#first}}
                <li class="page-item">
                    <a class="page-link" href="/?page=0&sortBy={{sortBy}}&sortDir={{sortDir}}">Prima</a>
                </li>
                {{/first}}
                
                {{^first}}
                <li class="page-item">
                    <a class="page-link" href="/?page={{currentPage}}&sortBy={{sortBy}}&sortDir={{sortDir}}">Precedente</a>
                </li>
                {{/first}}
                
                <li class="page-item active">
                    <span class="page-link">{{currentPage}} di {{totalPages}}</span>
                </li>
                
                {{^last}}
                <li class="page-item">
                    <a class="page-link" href="/?page={{currentPage}}&sortBy={{sortBy}}&sortDir={{sortDir}}">Successiva</a>
                </li>
                {{/last}}
                
                {{#last}}
                <li class="page-item">
                    <a class="page-link" href="/?page={{totalPages}}&sortBy={{sortBy}}&sortDir={{sortDir}}">Ultima</a>
                </li>
                {{/last}}
            </ul>
        </nav>
        {{/totalPages}}
        {{/tasks}}
    </div>

    <script src="/js/bootstrap.bundle.min.js"></script>
</body>
</html>
