# ===========================================
# CONFIGURAZIONE DATABASE
# ===========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=taskdb
DB_USERNAME=taskuser
DB_PASSWORD=your-secure-password-here

# ===========================================
# CONFIGURAZIONE SERVER
# ===========================================
SERVER_PORT=8080

# ===========================================
# CONFIGURAZIONE JWT (per autenticazione)
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random
JWT_EXPIRATION=86400000

# ===========================================
# CONFIGURAZIONE PROFILI SPRING
# ===========================================
# Valori possibili: dev, prod, test
SPRING_PROFILES_ACTIVE=dev

# ===========================================
# CONFIGURAZIONE FLYWAY (migrazioni DB)
# ===========================================
FLYWAY_ENABLED=true

# ===========================================
# CONFIGURAZIONE JPA/HIBERNATE
# ===========================================
JPA_DDL_AUTO=update
JPA_SHOW_SQL=true

# ===========================================
# CONFIGURAZIONE CORS (per frontend)
# ===========================================
CORS_ALLOWED_ORIGINS=http://localhost:4200,http://localhost:3000

# ===========================================
# CONFIGURAZIONE LOGGING
# ===========================================
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=DEBUG

# ===========================================
# CONFIGURAZIONE EMAIL (se necessario)
# ===========================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@taskmanager.com

# ===========================================
# CONFIGURAZIONE EXTERNAL APIs
# ===========================================
API_KEY=your-external-api-key
EXTERNAL_SERVICE_URL=https://api.external-service.com
